@model Ticketin_BlackStone.Models.Ticket

<h4>Close Ticket</h4>

        <form asp-controller="UserTicket" asp-action="CloseTicket">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClosingReason" class="control-label"></label>
                <input asp-for="ClosingReason" class="form-control" required/>
                <span asp-validation-for="ClosingReason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Close Ticket" class="btn btn-primary" />
                
            </div>
        </form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
